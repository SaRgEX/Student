<Page x:Class="WpfApp15.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp15"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="LoginPage">

    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <StackPanel>
            <Label>Enter login:</Label>
            <TextBox Name="textBoxLogin"></TextBox>
            <Label>Enter password:</Label>
            <TextBox Name="textBoxPassword"></TextBox>
            <Button Content="Login" Click="ButtonLogin"></Button>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Margin="30, 100" Content="Don't have an account?" Click="ButtonGoToRegPage"></Button>
        </StackPanel>
    </Grid>
</Page>
